root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
curly_bracket_next_line = false
spaces_around_operators = true
indent_brace_style = K&R
indent_size = 2
tab_width = 2
max_line_length = 88

# Bash Scripts
[{.,}*.{sh,bash}]
indent_style = space
indent_size = 2
line_comment = #
block_comment_start = ##
block_comment_end = ##
block_comment = ##

# Python Files
[{.,}*.{py,pyw}]
indent_size = 4
tab_width = 4
line_comment = #
block_comment_start = """
block_comment = """

# Markdown Files
[{.,}*.{md,markdown}]
indent_size = 2
trim_trailing_whitespace = false
trim_final_newline = false
block_comment_start = <!---
block_comment_end = -->

# Makefiles
[{.,}*.{mk,makefile,Makefile}]
indent_style = tab
line_comment = #

# XML Configuration Files
[{.,}**.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_size = 2
block_comment_start = <!--
block_comment_end = -->

# JSON Files
[{.,}*.{json,json5,webmanifest}]
indent_size = 2

# YAML Files
[{.,}*.{yaml,yml}]
indent_style = space
indent_size = 2
line_comment = #

# JSON files
[{.,}*.{json,json5}]
indent_style = space
indent_size = 2

# JavaScript Files
[{.,}*.{js,jsx}]
indent_style = space
indent_size = 2
line_comment = //
block_comment_start = /**
block_comment = *
block_comment_end = */
